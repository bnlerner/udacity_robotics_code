<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />
  <link name="robot_footprint"></link>

  <!--Base chassis-->

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.1 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.2" ixy="0" ixz="0"
          iyy="0.2" iyz="0"
          izz="0.2"
      />
    </inertial>

    <collision name='collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="1.2 0.6 0.8"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="1.2 0.6 0.8"/>
      </geometry>
    </visual>

  </link>

  <gazebo reference="chassis">
    <material>Gazebo/Green</material>
  </gazebo>

  <!--caster-->

  <joint name="front_caster_joint" type="fixed">
    <origin xyz="0.25 0 -0.3" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="front_caster" />
  </joint>


  <link name="front_caster">

    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.001" ixy="0" ixz="0"
               iyy="0.001" iyz="0"
               izz="0.001"/>
    </inertial>

    <collision name='front_caster_collision'>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.149"/>
      </geometry>
    </collision>

    <visual name='front_caster_visual'>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.15"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="front_caster">
    <mu1 value="0.0"/>
    <mu2 value="0.0"/>
    <kp value="10000000.0"/>
    <kd value="1.0"/>
    <fdir1 value="1 0 0"/>
    <material>Gazebo/Grey</material>
    <turnGravityOff>false</turnGravityOff>
  </gazebo>


  <!--wheels-->
  <joint name='right_rear_wheel_hinge' type="continuous">
    <origin xyz="-0.3 -0.4 -0.15" rpy="0 0 0"/>
    <child link="right_rear_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='right_rear_wheel'>

    <inertial>
      <mass value="4.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.2" ixy="0" ixz="0"
          iyy="0.2" iyz="0"
          izz="0.2"
      />
    </inertial>

    <collision name='right_rear_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.15" radius="0.3"/>
      </geometry>
    </collision>

    <visual name='right_rear_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.15" radius="0.3"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="right_rear_wheel">
    <material>Gazebo/Gray</material>
  </gazebo>

  <joint name='left_rear_wheel_hinge' type="continuous">
    <origin xyz="-0.3 0.4 -0.15" rpy="0 0 0"/>
    <child link="left_rear_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <link name='left_rear_wheel'>

    <inertial>
      <mass value="4.0"/>
      <origin xyz="0.0 0 0" rpy=" 0 1.5707 1.5707"/>
      <inertia
          ixx="0.2" ixy="0" ixz="0"
          iyy="0.2" iyz="0"
          izz="0.2"
      />
    </inertial>

    <collision name='left_rear_wheel_collision'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/> 
      <geometry>
        <cylinder length="0.15" radius="0.3"/>
      </geometry>
    </collision>

    <visual name='left_rear_wheel_visual'>
      <origin xyz="0 0 0" rpy=" 0 1.5707 1.5707"/>
      <geometry>
        <cylinder length="0.15" radius="0.3"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="left_rear_wheel">
    <material>Gazebo/Gray</material>
  </gazebo>

  <!--sensors and cameras-->
  <joint name="camera_joint" type="fixed">
    <origin xyz="0.6 0 0" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="camera" />
  </joint>

  <link name='camera'>
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='camera_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </collision>

    <visual name='camera_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
    </visual>
  </link>

  <gazebo reference="camera">
    <material>Gazebo/Red</material>
  </gazebo>

  <joint name="hokuyo_joint" type="fixed">
    <origin xyz="0.55 0 0.4" rpy="0 0 0" />
    <parent link="chassis" />
    <child link="hokuyo" />
    <axis xyz="0 1 0" rpy="0 0 0" />
  </joint>

  <link name='hokuyo'>
    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='hokuyo_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>

    <visual name='hokuyo_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
      </geometry>
    </visual>
  </link>

</robot>


